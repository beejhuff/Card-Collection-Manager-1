<?xml version="1.0" encoding="UTF-8"?>

<!-- This file coordinates the creation of archives for shipping of the project  -->
<assembly>
	<id>zip</id>
	
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>${basedir}/build/config/</directory>
			<outputDirectory>config/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/build/data/</directory>
			<outputDirectory>data/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/build/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>